{ users, pkgs }:
{
  hostName = "leevi";
  grubDevice = "/dev/sdb";
  version = "unstable";
  users = with users; [
    (jluttine { sudo = true; })
  ];
  displayManager = "sddm";
  desktopEnvironment = "kde";
  extraServices = {
    sshd = true;
    emacs = false;
    salmon = true;
    tuhlaajapojat = true;
    mythbackend = true;
    mythfrontend = true;
    storj = true;
  };
  # Use local nixpkgs
  nixpkgs = "/etc/nixpkgs";
  extraPackages = with pkgs; [

    # OpenStreetMap editor
    josm

    # 3D modelling
    blender

    # Photo manager
    digikam5

    # Panorama stitcher
    hugin
    # HDR photography
    luminanceHDR

    # Instant messaging
    #cutegram
    tdesktop
    qtox
    linphone
    pybitmessage

    # Twitter
    corebird

    # Bitcoin
    electrum
    zbar

    # Programming
    emacs
    gitAndTools.gitflow
    pgadmin

    # Separate tiling window manager
    #i3

    patchelf

  ];
}
