{ users, pkgs }:
{
  hostName = "leevi";
  grubDevice = "/dev/sdb";
  version = "unstable";
  users = with users; [
    (jluttine { groups = [ "wheel" "adbusers" ]; })
  ];
  displayManager = "sddm";
  desktopEnvironment = "kde";
  extraServices = {
    sshd = false;
    emacs = false;
    salmon = true;
    tuhlaajapojat = true;
    mythbackend = true;
    mythfrontend = true;
    storj = true;
    tv = true;
  };
  # Use local nixpkgs
  nixpkgs = "/etc/nixpkgs";
  extraPackages = with pkgs; [

    # LaTeX
    texlive.combined.scheme-full

    # OpenStreetMap editor
    josm

    # 3D modelling
    blender

    # Zotero client
    #qnotero

    encfs

    # E-books
    fbreader
    calibre

    # RSS reader
    # rssguard
    #feedreader
    rssguard

    w_scan

    # Photo manager
    shotwell

    # Panorama stitcher
    hugin
    # HDR photography
    luminanceHDR

    # Instant messaging
    #cutegram
    tdesktop
    qtox
    linphone
    pybitmessage

    # Twitter
    corebird

    # Bitcoin
    electrum
    zbar
    monero
    cpp_ethereum

    # Encryption
    openssl

    # Programming
    emacs
    gitAndTools.gitflow
    pgadmin
    nbstripout

    # Separate tiling window manager
    #i3

    patchelf

  ];
}
