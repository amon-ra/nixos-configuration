{ pkgs, ...}:

{

  imports = [
    ./nextcloud.nix
  ];

  services.nginx = {
    enable = true;

    #clientMaxBodySize = ???;

    virtualHosts = {

      "nipsu.fi" = {
        serverName = "nipsu.fi";
        default = false;
        enableSSL = false;
        forceSSL = false;
        locations = {
          "/" = {
            root = "/var/www/nipsu.fi";
            index = "index.html";
            extraConfig = "autoindex on;";
          };
        };
      };

    };
  };
}
