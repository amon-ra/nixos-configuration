{

  # Define on which hard drive you want to install Grub.
  boot.loader.grub.device = "/dev/sdb";

  boot.initrd.luks.devices = [
    {
      name = "cryptroot";
      device = "/dev/sdb3";
    }
    {
      name = "cryptparabola";
      device = "/dev/sda2";
    }
  ];

  fileSystems."/parabola" = { 
    device = "/dev/mapper/cryptparabola";
    fsType = "ext4";
  };

}
