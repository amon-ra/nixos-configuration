{
  global = {
    padding = 24;
    markup = "full";
    alignment = "center";
    word_wrap = "yes";
    horizontal_padding = 24;
    frame_width = 2;
    format = "<b>%s</b>: %b";
    font = "FantasqueSansMono Nerd Font Mono 10";
    frame_color = "#29d398";
    geometry = "300x5-10+30";
  };
  urgency_low = {
    foreground = "#fdf0ed";
    background = "#16161c";
    frame_color = "#29d398";
    timeout = 15;
  };
  urgency_normal = {
    foreground = "#fdf0ed";
    background = "#16161c";
    frame_color = "#fab795";
    timeout = 30;
  };
  urgency_critical = {
    foreground = "#fdf0ed";
    background = "#16161c";
    frame_color = "#e95678";
  };
}
