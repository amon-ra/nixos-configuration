{ users, pkgs }:
{
  hostName = "martta";
  nixpkgs = "https://nixos.org/channels/nixos-17.09/nixexprs.tar.xz";
  grubDevice = "/dev/sda";
  users = with users; [
    (jluttine { groups = [ "wheel" ]; })
    (meri { groups = [ "wheel" ]; })
  ];
  displayManager = "sddm";
  desktopEnvironment = "kde";
  allowUnfree = true;
  extraPackages = with pkgs; [

    # Instant messaging
    #tdesktop
    #qtox
    #linphone

    dropbox

  ];
}
